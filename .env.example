VITE_APP_VERSION=v4.1.0
GENERATE_SOURCEMAP=false

## Backend API URL
VITE_APP_API_URL=http://localhost:3010/
VITE_APP_BASE_NAME=/

## Map Box
VITE_APP_MAPBOX_ACCESS_TOKEN=your_mapbox_token_here

## SupaBase
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

## Notify
VITE_APP_PUBLIC_CLARITY_ID=
VITE_APP_PUBLIC_NOTIFY_ID=
VITE_APP_PUBLIC_ANALYTICS_ID=

# Prisma Database Configuration
# Get these from Supabase: Project Settings > Database > Connection String
# DATABASE_URL: Use "Transaction" mode (port 6543) for connection pooling - recommended for production
# DIRECT_URL: Use "Session" mode (port 5432) for migrations and schema operations

# Connect to Supabase via connection pooling
DATABASE_URL="postgresql://postgres.[PROJECT-REF]:[YOUR-PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres?pgbouncer=true"

# Direct connection to the database. Used for migrations
DIRECT_URL="postgresql://postgres.[PROJECT-REF]:[YOUR-PASSWORD]@aws-0-[REGION].pooler.supabase.com:5432/postgres"
